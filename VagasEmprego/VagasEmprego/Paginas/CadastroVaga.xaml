<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VagasEmprego.Paginas.CadastroVaga">
    <ContentPage.Content>
        <StackLayout>
            <Entry Placeholder="Vaga"/>
            <Entry Placeholder="Empresa"/>
            <Entry Placeholder="Quantidade"/>
            <Entry Placeholder="Cidade"/>
            <Entry Placeholder="Salario"/>
            <Editor Placeholder="Descrição" HeightRequest="200"/>
            
            <StackLayout>
                <Label Text="Tipo de Contratação"/>
                <Label Text="CLT"/>
                <Switch/>
                <Label Text="PJ"/>
            </StackLayout>

            <Entry Placeholder="Telefone"/>
            <Entry Placeholder="Email"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>